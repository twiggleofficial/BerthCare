# Global environment
NODE_ENV=development
PORT=3000
COMPOSE_PROJECT_NAME=berthcare

# PostgreSQL
POSTGRES_DB=berthcare_dev
POSTGRES_USER=berthcare
POSTGRES_PASSWORD=berthcare
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Local AWS stack (LocalStack)
AWS_REGION=ca-central-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_SESSION_TOKEN=
AWS_S3_ENDPOINT=http://localhost:4566
AWS_S3_BUCKET=berthcare-local-assets
LOCALSTACK_HOST=localhost
LOCALSTACK_PORT=4566

# Observability
LOG_LEVEL=info
SENTRY_DSN_BACKEND=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0
EXPO_PUBLIC_APP_ENV=development
EXPO_PUBLIC_SENTRY_DSN_MOBILE=
EXPO_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
