{
  "name": "@berthcare/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsx watch --clear-screen=false src/server.ts",
    "start": "node dist/server.js",
    "migrate": "node-pg-migrate up --config ./pgmigrate.config.cjs",
    "migrate:down": "node-pg-migrate down --config ./pgmigrate.config.cjs",
    "seed:dev": "tsx ./scripts/seed-dev.ts",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@sentry/node": "^7.120.4",
    "@sentry/tracing": "^7.120.4",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.2",
    "@types/pg": "^8.11.6",
    "@vitest/coverage-v8": "^1.6.1",
    "node-pg-migrate": "^8.0.3",
    "pg-mem": "^3.0.5",
    "tsx": "^4.16.2",
    "vitest": "^1.6.0"
  }
}
