{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "useDefineForClassFields": false,
    "paths": {
      "vitest": ["../backend/node_modules/vitest"],
      "vitest/*": ["../backend/node_modules/vitest/*"]
    }
  },
  "include": [
    "app",
    "App.tsx",
    "src",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "index.ts"
  ]
}
