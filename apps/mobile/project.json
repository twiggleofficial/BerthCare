{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "mobile",
  "projectType": "application",
  "sourceRoot": "apps/mobile/src",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["apps/mobile/src/**/*.ts"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project apps/mobile/tsconfig.app.json"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project apps/mobile/tsconfig.app.json"
      },
      "outputs": ["{workspaceRoot}/dist/apps/mobile"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec expo start",
        "cwd": "apps/mobile"
      },
      "description": "Launch the Expo dev server for the mobile app (requires expo CLI via pnpm exec)."
    }
  },
  "tags": ["scope:mobile", "type:application"]
}
